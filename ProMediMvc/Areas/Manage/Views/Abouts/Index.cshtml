@model IEnumerable<ProMediMvc.Models.About>

@{
	ViewBag.Title = "Index";
}

			<div class="card-header card-header-danger">
				<h4 class="card-title ">About</h4>
				@*<p>
					@Html.ActionLink("Create New", "Create")
				</p>*@
			</div>
			<div class="card-body table-responsive">
				<table class="table">
						<tr>
							<th>
								@Html.DisplayNameFor(model => model.Title)
							</th>

							<th>
								@Html.DisplayNameFor(model => model.Photo)
							</th>
							<th></th>
						</tr>


						@foreach (var item in Model)
						{
							<tr>
								<td>
									@Html.DisplayFor(modelItem => item.Title)
								</td>

								<td>
									<img src="~/Uploads/@item.Photo" width="150" />
								</td>
								<td>
									<a href="@Url.Action("edit", new { id = item.Id })" rel="tooltip" class="btn btn-primary">
										<i class="fas fa-edit"></i>
									</a>
									@*<a href="@Url.Action("delete", new { id = item.Id })" rel="tooltip" class="btn btn-round btn-danger">
										<i class="fas fa-trash-alt"></i>
									</a>*@
								</td>
							</tr>
						}
				</table>

			</div>

@model Blog
@{
	Blog prev = ViewBag.PrevBlog as Blog;
	Blog next = ViewBag.NextBlog as Blog;
}


<!-- Page Title -->
<div class="page-title">
	<div class="container">
		<div class="row">
			<div class="col-md-6 col-lg-7">
				<h2>Blog Details</h2>
			</div>

			<div class="col-md-6 col-lg-5">
				<ul>
					<li><a href="@Url.Action("detail", "home")">Home</a></li>
					<li>Blog Details</li>
				</ul>
			</div>
		</div>
	</div>
</div>
<!-- End Page Title -->
<!-- Start Blog Details Area -->
<section class="blog-details-area gray-bg ptb-100">
	<div class="container">
		<div class="row">
			<div class="col-lg-8 col-md-12">
				<div class="blog-details">
					<div class="article-img">
						<img src="~/Uploads/@Model.Photo" alt="blog-details">
						<div class="date">@Model.Date.ToString("dd")<br />@Model.Date.ToString("MMM")</div>
					</div>

					<div class="article-content">
						<ul class="category">
							<li><a href="#">@Model.BlogCat.Name</a></li>
							<li><a href="#">@Model.BlogTag.Name</a></li>
						</ul>

						<h3>@Model.Title</h3>
						@Html.Raw(Model.Text)

						<div class="share-post">
							<ul>
								<li><a href="#"><i class="icofont-facebook"></i></a></li>
								<li><a href="#"><i class="icofont-twitter"></i></a></li>
								<li><a href="#"><i class="icofont-linkedin"></i></a></li>
								<li><a href="#"><i class="icofont-instagram"></i></a></li>
								<li><a href="#"><i class="icofont-vimeo"></i></a></li>
							</ul>
						</div>
					</div>
				</div>

				<div class="post-controls-buttons">
					@if (prev != null)
					{
						<div class="controls-left">
							<a href="@Url.Action("detail", "blog", new { slug = prev.Slug })"><i class="icofont-double-left"></i> Prev Post</a>
						</div>
					}
					@if (next != null)
					{
						<div class="controls-right">
							<a href="@Url.Action("detail", "blog", new { slug = next.Slug })">Next Post <i class="icofont-double-right"></i></a>
						</div>
					}



				</div>

				<div class="post-comments">
					<h3>Comments</h3>
					<div class="single-comment">
						<div class="comment-img">
							<img src="~/Public/img/client.jpg" alt="client">
						</div>

@model BlogVm
@{
	ViewBag.Title = "Index";
}


<!-- Page Title -->
<div class="page-title">
	<div class="container">
		<div class="row">
			<div class="col-md-6 col-lg-7">
				<h2>Blog</h2>
			</div>

			<div class="col-md-6 col-lg-5">
				<ul>
					<li><a href="@Url.Action("detail", "home")">Home</a></li>
					<li>Blog</li>
				</ul>
			</div>
		</div>
	</div>
</div>
<!-- End Page Title -->
<!-- Latest news section -->
<section class="latest-news ptb-100">
	<div class="container">
		<div class="row">
			<div class="col-lg-8 col-md-12">
				<div class="row">
					@foreach (Blog blog in Model.Blogs.ToList())
					{

						<div class="col-lg-6 col-md-6">
							<div class="single-card actical-card">
								<div class="thumb-img">
									<a href="@Url.Action("detail", "blog", new {Slug=blog.Slug })">
										<img src="~/Uploads/@blog.Photo" alt="News Image" />
									</a>
								</div>

								<div class="caption-text">
									<h3><a href="@Url.Action("detail", "blog", new {Slug=blog.Slug })">@blog.Title</a></h3>

									<ul class="meta-tag">
										<li class="author">
											<img src="~/Uploads/@Model.Doctors.Find(d=>d.Id==blog.DoctorId).Photo" alt="">
											<a href="@Url.Action("detail","doctor", new {Slug=Model.Doctors.Find(d => d.Id == blog.DoctorId).Slug })">Dr. @Model.Doctors.Find(d => d.Id == blog.DoctorId).Name</a>
										</li>
										<li>@blog.Date.ToString("dd MMM, yyyy")</li>
										<li><i class="icofont-speech-comments"></i> 30</li>
									</ul>

									<p>@blog.Decs</p>

									<a href="@Url.Action("detail", "blog", new {Slug=blog.Slug })" class="read-more">Read More <i class="icofont-swoosh-right"></i></a>
								</div>
							</div>
						</div>

					}
					<div class="col-lg-12 col-md-12">
						<div class="pagination-area">
							<nav aria-label="Page navigation">
								<ul class="pagination justify-content-center">
									@if (Model.Page != 1)
									{
										<li class="page-item"><a class="page-link" href="@Url.Action("index","blog",new { page=Model.Page-1 })"><i class="icofont-hand-drawn-left"></i></a></li>
									}
									@for (int i = 1; i <= Model.TotalPage; i++)
									{
										<li class="page-item  @(Model.Page==i?"active":"")"><a class="page-link" href="@Url.Action("index","blog",new { page=i })">@i</a></li>
									}
									@if (Model.Page != Model.TotalPage)
									{
										<li class="page-item"><a class="page-link" href="@Url.Action("index","blog",new { page=Model.Page+1 })"><i class="icofont-hand-drawn-right"></i></a></li>
									}
								</ul>
							</nav>
						</div>
					</div>
				</div>
			</div>
			@Html.Partial("_Widget")
		</div>
	</div>
</section>
<!-- End Latest news section -->
<!-- Call To Action -->
<section class="call-to-action">
	<div class="container">
		<div class="row">
			<div class="col-lg-9">
				<div class="call-to-action-text">
					<i class="icofont-first-aid"></i>
					<h3>Health Care Center</h3>
					<p>if you have any Emerangcy by health problem contact this <span>No. 035 687 9514</span> or contact form</p>
				</div>
			</div>

			<div class="col-lg-3">
				<a href="#" class="default-btn">Contact Us</a>
			</div>
		</div>
	</div>
</section>
<!-- End Call To Action -->
